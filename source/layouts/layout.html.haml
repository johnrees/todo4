!!!
%html{"ng-app" => true}

  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1"}/
    %title= data.page.title || "Todo4"
    = stylesheet_link_tag "normalize", "all"

  %body{:class => page_classes, 'ng-controller' => 'window.TodosListController'}
    / %input{"ng-model" => "yourName", :placeholder => "Enter a name here", :type => "text"}/
    / %hr/
    / %h1 Hello{{yourName}}!
    = yield
    / = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular.min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/zepto/1.0/zepto.min.js", "http://d3lp1msu2r81bx.cloudfront.net/kjs/js/lib/kinetic-v4.5.2.min.js", "all"
